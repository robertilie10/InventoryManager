@model FixedAssetsStockTaking.Models.Inventar

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Inventar</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
            </div>

            <div class="form-group">
                <input asp-for="CreatedBy" class="form-control" type="hidden" readonly/>
            </div>

            <div class="form-group">
                <input asp-for="ClosedBy" class="form-control" type="hidden" readonly />
            </div>


            <div class="form-group">
                <input asp-for="CreateDate" class="form-control" type="hidden" readonly />
            </div>


            <div class="form-group">
                <input asp-for="ClosedDate" class="form-control" type="hidden" readonly />
            </div>  
            

            <div class="form-group">
                <input asp-for="Status" class="form-control" id="Status" type="hidden" readonly />
            </div>


            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary"/>
            </div>

            
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
