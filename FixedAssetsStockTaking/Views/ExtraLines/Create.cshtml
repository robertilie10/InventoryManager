@model FixedAssetsStockTaking.Models.ExtraLine

@{
    Layout = "";
}

<div class="modal-fade" id="ModalCreateLine" style="height:100%"> 
    <div class="modal-dialog" style="height:100%">
        <div class="modal-content" id="adduser">
            <form asp-action="Create" onsubmit="convertToUpperCase()" style="margin-top: 8%;height: 100%;width: 100%;">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                @foreach (var item in ViewData["Inventar"] as List<Inventar>)
                {
                    <div class="form-group" style="display:none">
                        <label asp-for="InventarID" class="control-label"></label>
                        <input asp-for="InventarID" class="form-control" readonly value="@item.ID" />
                    </div>
                }
                <div class="form-group">
                    <label asp-for="MFLine" class="control-label">Line</label>
                    <input asp-for="MFLine" id="MFLineInput" class="form-control" />
                    <span asp-validation-for="MFLine" class="text-danger"></span>
                </div>
                <div id="down-buttons">
                    <input type="submit" value="CREATE" id="create-btn" />                      
                    <button type="button" value="CLOSE" id="close-btn" data-bs-dismiss="modal"
                            style="float: right;
                         margin: 0;">
                        CLOSE
                    </button>
                </div>
            </form>           
         </div>
    </div>
</div>

<script>

    function convertToUpperCase() {
        var mfLineInput = document.getElementById("MFLineInput");
        mfLineInput.value = mfLineInput.value.toUpperCase();
    }

</script>
<style>
    .form-group {
        margin-top: 2%;
        margin-left: 10%;
        margin-right: 10%;
    }

    #down-buttons{
        display: flex;
        align-items: center;
        justify-content: space-between;
        width: 70%;
        left: 15%;
        top: 17%;
        position: relative;
        height:21%;
    }

    @@media only screen and (max-width: 1366px) {
        #adduser{
            width: 29rem !important;
            left: 1rem !important;
        }
    }

    #adduser {
        position: relative;
        display: block;
        width: 37rem;
        left: -10%;
        pointer-events: auto;
        background-color: white;
        background-clip: padding-box;
        border: 1px solid #1196ad;
        border-radius: 1.5rem;
        outline: 0;
        height: 30%;
        top: 27%;
    }
    #create-btn, #close-btn {
        width: 33%;
        height: 100%;
        border-radius: 0.5rem;
        border: 0.17rem solid #1196ad;
        box-shadow: 0 0 0.313rem 0.018rem black;
        font-size: 1.5rem;
        font-weight: bold;
        color: #585d61;
    }

        #create-btn:hover {
            border: 0.12rem solid #1196ad;
            box-shadow: 0 0 0.313rem 0.138rem #1196ad;
        }

        #close-btn:hover {
            border: 0.12rem solid #1196ad;
            box-shadow: 0 0 0.313rem 0.138rem #1196ad;
        }

    .form-control {
        display: block;
        width: 100%;
        height: 3rem;
        padding: 0.375rem 0.75rem;
        font-size: 1rem;
        font-weight: 400;
        line-height: 1.5;
        color: #212529;
        background-color: #fff;
        background-clip: padding-box;
        border: 1px solid #ced4da;
        -webkit-appearance: none;
        -moz-appearance: none;
        appearance: none;
        box-shadow: 0 2px 5px rgb(0 0 0 / 0.5);
        border-radius: 0.25rem;
        transition: border-color .5s ease-in-out,box-shadow .5s ease-in-out;
    }

    .form-control:focus {
        outline: none;
        box-shadow: 0 0 0 0.1rem white, 0 0 0 0.25rem #1196ad;
    }
</style>
