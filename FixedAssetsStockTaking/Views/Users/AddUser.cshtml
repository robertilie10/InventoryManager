@model FixedAssetsStockTaking.Models.User

@{
    Layout = "";
}
  <div class="modal-fade" id="ModalCreate" style="height: 100%;">
    <div class="modal-dialog" style="height: 66%;">

        <div class="modal-content" id="adduser">

            <form asp-action="Create" style="height:80%; width:100%;">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Username" class="control-label"></label>
                    <input asp-for="Username" class="form-control" />
                    <span asp-validation-for="Username" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Email" class="control-label"></label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="EmployeeID" class="control-label"></label>
                    <input asp-for="EmployeeID" class="form-control" />
                    <span asp-validation-for="EmployeeID" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="RoleID" class="control-label"></label>
                    <select asp-for="RoleID" class="form-control" asp-items="ViewBag.RoleID"></select>
                </div>
                @if (ViewData["Inventar"] != null)
                {
                    foreach (var item in ViewData["Inventar"] as List<Inventar>)
                    {
                        <div class="form-group" style="display:none">
                            <label asp-for="InventarID" class="control-label"></label>
                                <input asp-for="InventarID" class="form-control" readonly value=@item.ID></input>
                        </div>
                    }
                }
                else
                {
                    <span asp-validation-for="InventarID" class="text-danger"></span>
                }
                <div class="buttons">
                    <input type="submit" value="CREATE" id="create-btn" />
                    <button type="button" id="close-btn" data-bs-dismiss="modal">
                        CLOSE
                    </button>
                </div>
            </form>

            

        </div>
     </div>
  </div>

<style>

    @@media only screen and (max-width: 1366px) {

        #create-btn, #close-btn{
            font-size: 1rem!important;
        }
    }

    .buttons{
        width: 100%;
        height:12%;
        display: flex;
        align-items: center;
        justify-content: space-around;
        top: 6%;
        position: relative;
    }
    .form-control{
        display: block;
        width: 100%;
        height: 65%;
        padding: 0.375rem 0.75rem;
        box-shadow: 0 2px 5px rgb(0 0 0 / 0.5);
        font-size: 1rem;
        font-weight: 400;
        line-height: 1.5;
        color: #212529;
        background-color: #fff;
        background-clip: padding-box;
        border: 1px solid #ced4da;
        -webkit-appearance: none;
        -moz-appearance: none;
        appearance: none;
        border-radius: 0.25rem;
        transition: border-color .5s ease-in-out,box-shadow .5s ease-in-out;
    }


    #create-btn, #close-btn{
        width: 30%;
        height: 100%;
        border-radius: 0.5rem;
        border: 0.17rem solid #1196ad;
        box-shadow: 0 0 0.313rem 0.018rem black;
        font-size: 1.5rem;
        font-weight: bold;
        color: #585d61;
    }

        #create-btn:hover {
            border: 0.12rem solid #1196ad;
            box-shadow: 0 0 0.313rem 0.138rem #1196ad;
        }

        #close-btn:hover{
            border: 0.12rem solid #1196ad;
            box-shadow: 0 0 0.313rem 0.138rem #1196ad;
        }

    .form-name {
        display: block;
        width: 100%;
        height: 3rem;
        padding: 0.375rem 0.75rem;
        font-size: 2rem;
        font-weight: 400;
        color: #212529;
        border: 1px solid #ced4da;
        border-radius: 0.85rem;
        transition: border-color .5s ease-in-out,box-shadow .5s ease-in-out;
    }

    .form-control:focus {
        outline: none;
        box-shadow: 0 0 0 0.1rem white, 0 0 0 0.25rem #1196ad;
    }

    .form-group {
        margin-top: 5.5%;
        margin-left: 10%;
        margin-right: 10%;
        height: 15%;
        width: 80%;
    }

    #adduser{
        position: relative;
        display: block;
        width: 100%;
        pointer-events: auto;
        background-color: white;
        background-clip: padding-box;
        border: 1px solid #1196ad;
        border-radius: 1.5rem;
        outline: 0;
        height: 100%;
        top: 19%;
    }

    .modal::-webkit-scrollbar {
        display: none;
    }

    .modal-dialog {
        max-width: 500px;
    }
</style>
