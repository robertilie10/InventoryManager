@model FixedAssetsStockTaking.Models.User

@{
    ViewData["Title"] = "Edit";
}

@{
    Layout = "";
}



<div class="modal-fade" id="ModalCreate" style="height:100%">
    <div class="modal-dialog" style="height:100%">
        <div class="modal-content" id="edit">
            <form asp-action="Edit" style="height: 83%;width: 100%;">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group-b">
                    <label asp-for="RoleID" class="control-label">Role</label>
                    <select asp-for="RoleID" class="form-control" style="box-shadow: 0 2px 5px rgb(0 0 0 / 0.5);" asp-items="ViewBag.RoleID"></select>
                    <span asp-validation-for="RoleID" class="text-danger"></span>
                </div>
                <div class="form-group" style="display: none;">
                    <label asp-for="Username" class="control-label"></label>
                    <input asp-for="Username" value=@Model.Username class="form-control"></input>
                    <span asp-validation-for="Username" class="text-danger"></span>
                </div>
                <div class="form-group" style="display: none;">
                    <label asp-for="Email" class="control-label"></label>
                    <input asp-for="Email" value=@Model.Email class="form-control"></input>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group" style="display: none;">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" value=@Model.Name class="form-control"></input>
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group" style="display: none;">
                    <label asp-for="EmployeeID" class="control-label"></label>
                    <input asp-for="EmployeeID" value=@Model.EmployeeID class="form-control"></input>
                    <span asp-validation-for="EmployeeID" class="text-danger"></span>
                </div>
                <div class="form-group" style="display: none;">
                    <label asp-for="InventarID" class="control-label"></label>
                    <input asp-for="InventarID" value=@Model.InventarID class="form-control"></input>
                    <span asp-validation-for="InventarID" class="text-danger"></span>
                </div>
                <div id="down-buttonss">
                    <input id="save" type="submit" value="SAVE" style="" />
                    <button id="close" type="button"style="" data-bs-dismiss="modal">
                        CLOSE
                    </button>
                </div>
            </form>

        </div>
     </div> 
</div>


<div>
    <a asp-action="Index">Back to List</a>
</div>

