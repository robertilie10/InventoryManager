@model FixedAssetsStockTaking.Models.SuperAdmin

@{
    ViewData["Title"] = "CreateSuperAdmin";
}

@{
    Layout = "";
}
       <div class="modal-content" style="height:92%">
        <h1 style="margin-top: 1rem;">CREATE SUPERADMIN</h1>
            <form asp-action="CreateModal" style="height:77%;">

                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                 <div class="form-group-f" style="margin-top: 0.9rem;height:43%">
                    <label asp-for="Name" class="control-label" style="font-size:1.5rem"></label>
                    <input asp-for="Name" class="form-name" />
                </div>

                <div class="down-buttons">
                    <input type="submit" value="CREATE" class="create-super" />
            <button type="button" class="create-super" id="btn-list" data-bs-toggle="modal" data-bs-target="#listModal">
                LIST
            </button>
            <button type="button" value="CLOSE" class="create-super" id="modal-close" data-bs-dismiss="modal">
                    CLOSE
                </button>
                </div>
            </form>                             
       </div>

<script>
    $(document).ready(function () {
        $("#UserModal").on("hidden.bs.modal", function () {
            $("#listModal").modal("hide");
        });

        $("#modal-close").click(function () {
            $("#UserModal").modal("hide");  
        });
    });
</script>
<style>
    .sups{
        width: 100%;
        position: relative;
        display: flex;
        justify-content: center;
        top: -2rem;
    }

    h5{
        font-size:2rem;
    }
    .form-name {
        display: block;
        width: 100%;
        height: 3rem;
        padding: 0.375rem 0.75rem;
        font-size: 2rem;
        font-weight: 400;
        color: #212529;
        box-shadow: 0 2px 5px rgb(0 0 0 / 0.5);
        border-radius: 0.85rem;
        transition: border-color .5s ease-in-out,box-shadow .5s ease-in-out;
    }

    .form-group {
        margin-top: 1.7rem;
    }

    .modal-content{
        position: relative;
        display: block;
        width: 100%;
        pointer-events: auto;
        background-color: white;
        background-clip: padding-box;;
        border-radius: 0.3rem;
        outline: 0;
        top: -1rem;
        border: none;
    }



    .modal::-webkit-scrollbar {
        display: none;
    }

    .modal-dialog {
        max-width: 1000px;
        margin: 0;
    }
</style>
